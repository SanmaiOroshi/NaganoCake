<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h4>注文詳細画面</h4>
      <table class="table">
        <tbody>
          <tr>
            <td>購入者</td>
            <td><%= @order.name%></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              <%= @order.post_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= t("enums.order.payment_method.#{@order.payment_method}") %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <%= form_for @order,url: admin_order_path(@order) do |f| %>
            <td><%= f.select :status, Order.statuses.map{|k| [I18n.t("enums.order.status.#{k[0]}"),k[1]]} %></td>
            <td><%= f.submit "更新", class:"btn btn-primary" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
    <div class = "row">
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order_item.each do |order| %>
          <tr>
            <td><%= order.product.name%></td>
            <td><%= order.price %></td>
            <td><%= order.units%></td>
            <td> <%= order.price * order.units %> </td>
            <%= form_for order,url: admin_order_path(order) do |form| %>
            <td><%= form.select :working_status, OrderedProduct.working_statuses.map{|k| [I18n.t("enums.ordered_product.working_status.#{k[0]}"),k[0]]} %></td>
            <!-- 後日{|k| [I18n.t("enums.ordered_product.working_status.#{k[0]}"),k[0]]} を解決する-->
            <td><%= form.submit "更新", class:"btn btn-primary" %></td>
            <% end %>
          </tr>
          <% end%>
        </tbody>
      </table>        
    </div>
  
    <div class="col-xs-4">
      <table class="table">
            <tr>
              <td>商品合計</td>
              <td><%= disp_price(@order.total_payment) %></td>
            </tr>
            <tr>
              <td>送料</td>
              <td><%= @order.shipping_fee %></td>
            </tr>
            <tr>
              <td>請求金額合計</td>
              <td><%= disp_price(@order.total_payment + @order.shipping_fee) %></td>
            </tr>
            </tbody>
      </table>
    </div>
</div>
</div>