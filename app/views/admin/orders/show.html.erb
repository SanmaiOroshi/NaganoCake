<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h4>注文詳細画面</h4>
      <table class="table">
        <tbody>
          <tr>
            <td>購入者</td>
            <td><%= @order.name></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              <%= @order.post_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= t("enums.order.payment_method.#{@order.payment_method}") %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td><%= t("enums.order.status.#{@order.status}")%></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-xs-8">
      <table class="table">
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>商品名</td>
            <td><%= order.name%></td>
          </tr>
          <tr>
            <td>単価（税込）</td>
            <td><%= order.products.unit_price %></td>
          </tr>
          <tr>
            <td>数量</td>
            <td><%= order.ordered_products.units%></td>
          </tr>
          <tr>
            <td>小計</td>
            <td><%= order.total_payment %></td>
          </tr>
          <tr>
            <td>制作ステータス</td>
            <td><%= t("enums.order.status.#{order.status}")%></td>
            <td><%= f.submit "更新", class:"btn btn-success" %></td>
            <td><%= f.select :status, Article.status { |k, v| [t(articles.status.{k}), v] %></td>
          </tr>
          <% end%>
        </tbody>
      </table>        
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8">
      <table class="table">
           <thead>
             <tr>
              <th></th>
              <th></th>
             </tr>
           </thead>
           <tbody>
            <% @order.ordered_products.each do |product| %>
                <div class = "action">
                    <h2>商品合計</h2>
                    <td><%= order.total_payment %></td>
                </div>
                  <div class = "action">
                    <h2>送料</h2>
                    <td><%= order.total_payment %></td>
                </div>
                  <div class = "action">
                    <h2>請求金額合計</h2>
                    <td><%= order.total_payment %></td>
                </div>







            <tr>
               <td><%= product.product.name %></td>
               <td><%= disp_price(product.price) %></td>
               <td><%= disp_price(product.units) %></td>
               <td><%= disp_price(product.price * product.units) %></td>
            </tr>
            <% end %>
           </tbody>
         </table>   
    </div>
  </div>
</div>