<div class="container">
  <div class="row">
    <h3>商品 編集画面</h3>
    <%= form_with url: admin_product_path(@product) ,model: @product,local: true do |f| %>
      <%= render 'layouts/error_messages', model: @product %>
      <div class="col-xs-4">
        <div class="row">      
          <%= attachment_image_tag  @product,:image,:fill, 300, 300 %>
        </div>
        <div class="row">
          <%= f.attachment_field :image %>      
        </div>
      </div>
      <div class="col-xs-8">      
        <div>商品名
          <%= f.text_field :name , value: @product.name %>
        </div>
        <div>商品説明 
          <%= f.text_area :description , value: @product.description %>
        </div>
        <div>ジャンル
          <%= f.collection_select :genre_id, Genre.all, :id,:genre,value: @product.genre_id %>
        </div>
        <div>税抜価格
          <%= f.number_field :unit_price, value: @product.unit_price %>
        </div>
        <div>販売ステータス
          <%= f.select :status, [[t('enums.product.status.true'),true],[t('enums.product.status.false'),false]],:prompt => "--選択してください--" %>
        </div>
      </div>
    
</div>
<div class="col-xs-offset-7 col-xs-2">
        <%= f.submit "変更を保存" ,class: "btn btn-primary btn-block" %>
      </div>
    <% end %>    
</div>