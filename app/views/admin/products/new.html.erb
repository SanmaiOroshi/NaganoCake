<h3>商品 新規登録画面</h3>

<%= form_with url: admin_products_path,model: @product do |f| %>
  <div>
    <%= f.attachment_field :image%>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.text_area :description %>    
  </div>
  <div>
    <%= f.collection_select :genre_id, Genre.all, :id,:genre %>
  </div>
  <div>
    <%= f.number_field :unit_price%>
  </div>

  <%= f.submit "新規登録", class: "btn btn-primary" %>
<% end %>