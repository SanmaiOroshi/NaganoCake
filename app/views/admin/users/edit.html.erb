<div class="container">
  <div class="row">
    <h2>会員編集画面</h2>
  </div>

  <div class="col-xs-4">
    <% if flash[:user_updated_error] %>
      <span class="text-danger"><%= flash[:user_updated_error] %></span>
    <% end %>
  </div>


      <%= form_for (@user), url: admin_user_path(@user) do |f| %>

        <div class="form-group row">
          <%= f.label :会員id, class: "col-sm-4" %>
          <%= f.label @user.id %>
        </div>

        <div class="form-group row">
          <%= f.label :氏名, class: "col-sm-4" %>
          <%= f.text_field :last_name, class: "form-control col-sm-4" %>
          <%= f.text_field :first_name, class: "form-control col-sm-4" %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: "col-sm-4" %>
          <%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
          <%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-sm-4" %>
          <%= f.text_field :post_code, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-sm-4" %>
          <%= f.text_field :address, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class: "col-sm-4" %>
          <%= f.text_field :phone_number, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-sm-4" %>
          <%= f.email_field :email, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :会員ステータス, class: "ml-3" %>
          <div class="ml-4">
            <%= f.radio_button :status, :true %>
            <%= f.label :status, "有効会員" %>
            <%= f.radio_button :status, :false %>
            <%= f.label :status, "退会済み" %>
          </div>
        </div>

        <div class="change">
          <%= f.submit "変更を保存する", class: "btn btn-primary mt-3 mx-auto" %>
        </div>

      <% end %>


</div>