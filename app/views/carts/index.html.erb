
<h2>ショッピングカート</h2>
<% @carts.each do |cart| %>
<%= cart.submit "カートを空にする", class: "btn btn-danger" %>
<table class = "table">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        <tr>
            <td><%= cart.name%></td>
            <td><%= cart.price%></td>
            <td>
                <%= cart.text_field class: 'units'%>
                <%= cart.submit "変更", class: "btn btn-primary" %>
            </td>
            <td>
                <%= cart.price * cart.units %>
            </td>
            <td>
                <%= cart.submit "削除する", class: "btn btn-danger" %>
            </td>
        </tr>
        
    </tbody>
</table>
<% end %>
</br>
<span>
<%= link_to "買い物を続ける",products_path, class: "btn btn-primary" %>
</span>

<table class = "table">
    <tr>
        <td>合計金額</td>
        <td><%#= total_price %></td>
    </tr>
</table>

<span>
    <%= link_to "情報入力に進む", orders_path, class: "btn btn-success"%>
</span>