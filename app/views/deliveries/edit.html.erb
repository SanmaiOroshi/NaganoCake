　<div class="container">
	<div class="row">
		<div class="offset-1">
			<h2>配送先編集</h2>
		</div>
	</div>

 <div class="row">
 	<div class="col-xs-6">
	 <%= form_for(@delivery) do |f| %>
	 	<div class="form-group">
			<%= f.label :"郵便番号" %>
			<%= f.text_field :post_code, class: "form-control offset-1 col-4" %>
		</div>

		<div class="form-group">
			<%= f.label :"住所" %>
			<%= f.text_field :address, class: "form-control offset-1 col-8" %>
		</div>

		<div class="form-group">
			<%= f.label :"宛名" %>
			<%= f.text_field :name, class: "form-control offset-1 col-4" %>
		</div>

		<div class="row">
			<%= f.submit "編集する", class: "btn btn-outline-danger" %>
		</div>
	<% end %>
 </div>

</div>
