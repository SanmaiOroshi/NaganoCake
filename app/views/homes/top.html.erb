<div class="container", style="background-color: #fafad2;">
  <div class="row">
	<div class="col-md-12">
	  <%= image_tag 'topimage01.jpg', :width => '100%', :height => '60%' %>


		  <div class="row">
		  	<h2>New Product</h2>
		  </div>

          <div class="row mx-auto mt-3">
		  	<% @products.last(4).each do |product| %>
		  	<div class="col-xs-3">		  		
			  	<div class="mx-auto">
			  	<%= link_to product_path(product) do %>
		  	    <%= attachment_image_tag product, :image, :fill, 200,200, format: 'jpeg', fallback: '準備中.jpg',size: "200x200" %>
		  	</div>

		  	  <% end %>
		  	  <div class="row mt-2">
		  	  	<span><%= product.name %></span>
		  	  </div>
		  	  <div class="row mt-1">
		  	  	<span><%= disp_tax_price(product.unit_price) %>
		  	  	円</span>
		  	  </div>
		  	</div>
		  	<% end %>
		  </div>
    </div>
  </div>
</div>


