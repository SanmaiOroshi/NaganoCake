<div class="container">
  <div class="row">
    <h3>注文情報入力</h3>
  </div>

  <div class="col-xs-7">
    <%= form_with model:@order, url: new_order_path  ,method: :get,local: true do |f| %>
      <h4>支払い方法</h4>
      <div>
        <%= f.radio_button(:payment_method, :card) %>
        <%= f.label(:payment_method, t('enums.order.payment_method.card')) %>     
      </div>
      <div>
        <%= f.radio_button(:payment_method, :transfar) %>
        <%= f.label(:payment_method, t('enums.order.payment_method.transfar')) %>
      </div>

      <h4>お届け先</h4>
      <div class="">
        <%= f.radio_button(:delivery_addr, "my_addr") %> ご自身の住所
        <%= "#{current_user.post_code} #{current_user.address} #{current_user.last_name} #{current_user.first_name}" %>
      </div>

      <div class="">
        <%= f.radio_button(:delivery_addr, "registered_addr") %> 登録済み住所から選択
        <%= f.collection_select(:registered_address,current_user.deliveries,:id,:display_address) %>
      </div>

       <div class="">
        <%= f.radio_button(:delivery_addr, "new_addr") %> 新しいお届け先
      </div>

      <div>        
        郵便番号(ハイフンなし)<%= f.text_field :new_post_cd %>        
      </div>

      <div>
        住所<%= f.text_field :new_address %>        
      </div>

      <div>
        宛名<%= f.text_field :new_name %>        
      </div>

      <%= f.submit %>
    <% end %>
  </div>
  
</div>