<div class = "container">
    <div class = "row">
            <h2>商品一覧</h2>
            <h5>(全<%= @products.count %>件)</h5>
            <div class = "row">
                <div class = "col-xs-2">
                </div>
                <div class = "col-xs-10">
                <div class = "row">
                    <% @products.each do |product|%>
                        <div class = "col-xs-3 item">
                        <%= link_to(product) do %>
                        <%= attachment_image_tag(product, :image, :fill, 100,100, fallback: "準備中.jpg")%>
                        <%= link_to product.name, product, class: "product_#{product.id}"%>
                        <%= product.unit_price %>
                        <% end %>
                        </div>
                    <% end %>
                </div>
                </div>
            </div>
    </div>
</div>
