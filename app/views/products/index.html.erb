<div class = "container">
    <div class = "row">
        <div class = "col-xs-8">
            <h2>商品一覧</h2>
            <h5>(全<%= @products.count %>件)</h5>
            <div class = "row">
            <div class = "col-xs-5">
            </div>
            </div>
            <table class = "table">
                <tbody>
                    <% @products.each do |product|%>
                    <tr>
                        <%= link_to(product) do %>
                            <%= attachment_image_tag(product, :image, :fill, 100,100, fallback: "準備中.jpg")%>
                        <td><%= link_to product.name, product, class: "product_#{product.id}"%></td>
                        <td><%= product.unit_price %></td>
                    <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
