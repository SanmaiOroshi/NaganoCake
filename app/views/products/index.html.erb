<div class = "container">
    <div class = "row">
        <div class = "col-xs-8">
            <h2>商品一覧</h2>
            <h5>(全<%= @products.count %>件)</h5>
            <div class = "row">
            <%= 5.times do |i|%>
            
            <div class = "col-xs-5">
            <%= i %> <%= i %> <%= i %> <%= i %> <%= i %>
            <% end%>
            </div>
            </div>
            <table class = "table">
                <tbody>
                    <% @products.each do |product|%>
                    <tr>
                        <%= link_to(product) do %>
                            <%= attachment_image_tag(product, :image_id, :fill, 100,100, fallback: "no-image-icon.jpg")%>
                        <td><%= link_to product.name, product, class: "product_#{product.id}"%></td>
                        <td><%= product.price %></td>
                    <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
